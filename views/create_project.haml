%form{:method => 'post'}
  - if @error
    %p= @error
  #edit_box
    %label{:for => "name"} Project name
    %input{:type => "text", :size => 30, :name => "project[name]", :id => "name"}
    %br
    %label{:for => "desc"} Description
    %textarea{:cols => 30, :rows => 8, :name => "project[description]", :id => "desc"}
    %br
    %input{:type => "submit", :value => "Save"}